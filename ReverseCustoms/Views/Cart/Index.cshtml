@model IEnumerable<ReverseCustoms.Models.ViewModels.Cart.CartVM>

@{
    ViewBag.Title = "Корзина";
    int count = 1;
}
<style type="text/css">
    .ajaxbg {
        position: absolute;
        width: 100%;
        height: 100%;
        background: white;
        display: none;
    }
    .ajaxbg span {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate3d(-50%, -50%, 0);
    }
    .form.paypalform{
        position: absolute;
        left: -2000px;
    }
</style>
<h2>Корзина</h2>

@if (ViewBag.Message != null)
{
    <h3>@ViewBag.Message</h3>
}
else
{

    <div class="ajaxbg">
        <span>
            <img src="~/Content/img/ajax-loader.gif" height="100" width="150"/>
        </span>
    </div>

    <table class="table">
        <tr>
            <th>
                Название
            </th>
            <th>
                Кол-во
            </th>
            <th>
                Цена
            </th>
            <th>
                Изображение
            </th>

            <th>
                <!--Кнопка для изменения товаров-->
            </th>

            <th>
                Общая стоимость
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td class="qty@(item.ProductId)">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price) ₽
                </td>

                <td>
                    <img src="/Images/Uploads/Products/@item.ProductId/Thumbs/@item.Image" />
                </td>
                <th>
                    <a href="#" class="incproduct" data-id="@item.ProductId">+</a>
                    <a href="#" class="decproduct" data-id="@item.ProductId">-</a>
                    <a href="#" class="removeproduct" data-id="@item.ProductId">Удалить</a>
                </th>
                <td class="total@(item.ProductId)">
                    @Html.DisplayFor(modelItem => item.Total) ₽
                </td>

            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td class="grandtotal"> <b>Итого: </b> <span>@ViewBag.GrandTotal </span>₽</td>

        </tr>

    </table>
    <div class="paypaldiv">
        <form class="paypalform" action="https://www.sandbox.paypal.com/us/cgi-bin/webscr" method="post">
            <input type="hidden" name="cmd" value="_cart">
            <input type="hidden" name="upload" value="1" />
            <input type="hidden" name="business" value="sb-nfqcl6042556@business.example.com">

            @foreach (var item in Model)
            {
                <input type="hidden" name="item_name_@count" value="@item.ProductName">
                <input type="hidden" name="amount_@count" value="@item.Price">
                <input type="hidden" name="quantity_@count" value="@item.Quantity">
                count++;
            }

            <input type="hidden" name="currency_code" value="RUB">
            <div style="display: none">
                <input type="image" src="http://www.paypal.com/en_US/i/btn/x-click-but01.gif" name="submit" alt="Make payments with PayPal - it's fast, free and secure!">
            </div>
        </form>
    </div>
    
    <br />
    <a href="#" class="placeorder btn btn-primary float-right">
        Заказать
    </a>

}

@section Scripts
{

    <script src="~/Content/ShopJS/IncrementProductScript.js"></script>
}